set tabstop=2
set ls=2
set shiftwidth=2
set expandtab
set number
set ruler 

set autoindent
set smartindent

set hlsearch

syntax on
set background=dark
let g:solarized_termtrans=1
colorscheme solarized

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

:command W w
